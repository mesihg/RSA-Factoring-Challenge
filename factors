#!/usr/bin/python3

"""This module factorizes as many numbers as possible
   into a product of two smaller numbers."""

from sys import argv


def factorize(n):
    """factorize the given number into a product of two smaller numbers."""
    divisor = 2
    if n < 2:
        return
    while divisor <= n:
        if n % divisor == 0:
            print("{}={}*{}".format(n, n//divisor, divisor))
            break
        else:
            divisor += 1


def open_file_from_arg():
    """open the file passed as a command line argument"""
    if len(argv) != 2:
        exit()
    try:
        with open(argv[1], 'r') as f:
            for line in f.readlines():
                factorize(int(line))
    except (OSError, IndexError):
        pass


open_file_from_arg()
